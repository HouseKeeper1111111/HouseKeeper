<?xml version="1.0" encoding="utf-8"?>


<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="@string/prefkey_notifications_display"
        android:title="@string/preference_category_notifications_display"
        app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/prefkey_display_original_due_time_normal"
            android:title="@string/preference_display_original_due_time_normal"
            android:summary="@string/preference_display_original_due_time_normal_descr"
            app:singleLineTitle="false"
            app:iconSpaceReserved="false" />
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/prefkey_display_original_due_time_nag"
            android:title="@string/preference_display_original_due_time_nag"
            android:summary="@string/preference_display_original_due_time_nag_descr"
            app:singleLineTitle="false"
            app:iconSpaceReserved="false" />
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/prefkey_display_original_due_time_recreate"
            android:title="@string/preference_display_original_due_time_recreate"
            android:summary="@string/preference_display_original_due_time_recreate_descr"
            app:singleLineTitle="false"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
</PreferenceScreen>
